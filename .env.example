# API Configuration for Polymarket Agentic Trading System
# Copy this file to .env and fill in your API keys

# =============================================================================
# POLYMARKET APIs (Required for trading)
# =============================================================================

# Polymarket CLOB API (for order book and trading)
# Get from: https://docs.polymarket.com/
POLYMARKET_API_KEY=your_polymarket_api_key_here
POLYMARKET_API_SECRET=your_polymarket_api_secret_here
POLYMARKET_API_PASSPHRASE=your_passphrase_here

# Polymarket Gamma API (for market data)
# Public endpoint, no key needed for read-only
POLYMARKET_GAMMA_URL=https://gamma-api.polymarket.com

# Wallet for trading (Required for Layer 4 Execution)
# Your Ethereum wallet private key (KEEP SECURE!)
# TRADING_WALLET_PRIVATE_KEY=your_private_key_here
# TRADING_WALLET_ADDRESS=your_wallet_address_here

# =============================================================================
# NEWS APIs (For Layer 0 - Data Ingestion)
# =============================================================================

# NewsAPI (free tier: 100 requests/day)
# Get from: https://newsapi.org/
NEWSAPI_KEY=your_newsapi_key_here

# GDELT API (free, no key needed)
# https://blog.gdeltproject.org/gdelt-doc-2-0-api-debuts/
GDELT_ENABLED=true

# Bloomberg API (requires subscription)
# BLOOMBERG_API_KEY=your_bloomberg_key_here

# =============================================================================
# SOCIAL MEDIA APIs (For Sentiment Analysis - Layer 1)
# =============================================================================

# Twitter/X API v2
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_token_secret_here

# Reddit API (for sentiment)
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USER_AGENT=PolymarketAgent/1.0

# =============================================================================
# ALTERNATIVE DATA APIs (Layer 0)
# =============================================================================

# Etherscan API (for whale tracking)
# Get from: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Polygon.io (for on-chain data)
# Get from: https://polygon.io/
POLYGON_API_KEY=your_polygon_key_here

# The Graph (Polymarket subgraph)
# https://thegraph.com/explorer/subgraphs
GRAPH_API_KEY=your_graph_api_key_here

# =============================================================================
# TELEGRAM ALERTS (Optional)
# =============================================================================

# Telegram Bot for alerts
# Get from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# DATABASE (Optional - for Layer 5 persistence)
# =============================================================================

# PostgreSQL (for production data storage)
# DATABASE_URL=postgresql://user:password@localhost/polymarket_agent

# Redis (for caching)
# REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SYSTEM SETTINGS
# =============================================================================

# Environment: development | production
ENVIRONMENT=development

# Logging level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# Paper trading mode (no real trades)
PAPER_TRADING=true

# Minimum signal confidence to trade (0.0 - 1.0)
MIN_SIGNAL_CONFIDENCE=0.75

# Maximum position size in USD
MAX_POSITION_SIZE=5000

# Portfolio value for calculations
PORTFOLIO_VALUE=10000
